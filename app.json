{
  "expo": {
    "name": "Contribution Management System",
    "slug": "contritrack",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "contritrack",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-image.png",
      "resizeMode": "contain",
      "backgroundColor": "#6200ee"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tlclibrary.contritrack",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "Allow ContriTrack to access your camera to capture receipts.",
        "NSPhotoLibraryUsageDescription": "Allow ContriTrack to access your photo library to upload receipts."
      }
    },
    "android": {
      "package": "com.tlclibrary.contritrack",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#6200ee"
      },
      "permissions": [
        "INTERNET",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-image.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#6200ee"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "contritrack-tlc-library"
      }
    },
    "description": "Contribution Management System â€“ Member Interaction & Library Integration. Manage member contributions, track payments, and enable seamless member-library communication for TLC_LIBRARY.",
    "owner": "tlclibrary"
  }
}
